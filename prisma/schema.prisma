datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Challenge {
  id        String   @default(cuid()) @id
  title     String   @unique
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ziel {
  id        String   @default(cuid()) @id
  title     String   @unique
  steps     Step[]
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Step {
  id        String   @default(cuid()) @id
  title     String   @unique
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Ziel      Ziel     @relation(fields: [zielId], references: [id])
  zielId    String
}